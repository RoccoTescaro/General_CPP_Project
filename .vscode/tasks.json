        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": true,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        }
      },
      {
        "label": "Test",
        "type": "shell",
        "windows": {
          "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Debug -S ${workspaceFolder} -B ${workspaceFolder}\\build && cmake --build ${workspaceFolder}\\build --target ${workspaceFolderBasename}_tests && cd ${workspaceFolder}\\build && ctest -V"
        },
        "linux": {
          "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Debug -S ${workspaceFolder} -B ${workspaceFolder}/build && cmake --build ${workspaceFolder}/build --target ${workspaceFolderBasename}_tests && cd ${workspaceFolder}/build && ctest -V"

{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Clean Build",
        "type": "shell",
        "windows": {
          "command": "if exist ${workspaceFolder}\\build (cmake --build ${workspaceFolder}\\build --target clean) && cmake --build ${workspaceFolder}\\build"
        },
        "linux": {
          "command": "cmake --build ${workspaceFolder}/build --target clean && cmake --build ${workspaceFolder}/build"
        },
        "osx": {
          "command": "cmake --build ${workspaceFolder}/build --target clean && cmake --build ${workspaceFolder}/build"
        },
        "group": "build",
        "problemMatcher": [
          "$gcc",
          "$msCompile"
        ],
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        }
      },
      {
        "label": "Build Debug",
        "type": "shell",
        "windows": {
          "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Debug -S ${workspaceFolder} -B ${workspaceFolder}\\build && cmake --build ${workspaceFolder}\\build"
        },
        "linux": {
          "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Debug -S ${workspaceFolder} -B ${workspaceFolder}/build && cmake --build ${workspaceFolder}/build"
        },
        "osx": {
          "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Debug -S ${workspaceFolder} -B ${workspaceFolder}/build && cmake --build ${workspaceFolder}/build"
        },

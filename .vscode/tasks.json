          "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Release -S ${workspaceFolder} -B ${workspaceFolder}\\build && cmake --build ${workspaceFolder}\\build"
        },
        "linux": {
          "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Release -S ${workspaceFolder} -B ${workspaceFolder}/build && cmake --build ${workspaceFolder}/build"
        },
        "osx": {
          "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Release -S ${workspaceFolder} -B ${workspaceFolder}/build && cmake --build ${workspaceFolder}/build"
        },
        "group": "build",
